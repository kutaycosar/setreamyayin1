<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Setream</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
  <link rel="stylesheet" href="/main.css">
</head>
<body>

  <header class="header-bar mb-3";>
    <img class="my-0 mr-md-auto font-weight-normal img-fluid " alt="Responsive image" width="2000" height="2000"
      src="BANNER.png">
  </header>
  
<!-- header ends here -->



<div class="container py-md-5">

  <% errors.forEach(function(message) { %>
    <div class="alert alert-danger text-center"><%= message %></div>
  <% }) %>

  <div class="row align-items-center">
    <div class="col-lg-7 py-3 py-md-5">    
      <img class=" font-weight-normal img-fluid " alt="Responsive image" width="1200" height="170" src="POSTER-01.png">
    </div>
    <div class="col-lg-5 pl-lg-5 pb-3 py-lg-5">
      <form action="/register" method="POST" id="registration-form">

        <% regErrors.forEach(function(message) { %>
          <div class="alert alert-danger small"><%= message %></div>
        <% }) %>

          <div class="form-group">
            <label for="username-register" class="text-muted mb-1"><small> <h4>İsim-Soyisim (Name Surname)</h4> <p> </p><h6 style="color:tomato;"></h6>  </small></label>
            <input name="username" id="username-register" class="form-control" type="text" placeholder= "Örn: Ayşe Özer, Richard Kimble , Mehmet Yılmaz." autocomplete="off">
          </div>

          <div class="form-group">
            <label for="e-mail-register" class="text-muted mb-1"><small>
                <h4> E-posta adresi (E-mail address) </h4>
              </small></label>
            <input name="email" id="brans-register" class="form-control" type="text" placeholder="E-mail adresiniz" autocomplete="off">
          </div>
          
          <div class="form-group">
            <label for="unvan-register" class="text-muted mb-1"><small><h4> Ünvan (Title) </h4></small></label>
            <input name="unvan" id="brans-register" class="form-control" type="text" placeholder="Ünvanınız" autocomplete="off">
          </div>

          <div class="form-group">
            <label for="firma-register" class="text-muted mb-1"><small><h4> Çalıştığınız firma (Company) </h4></small></label>
            <input name="firma" id="sehir-register" class="form-control" type="text" placeholder="Çalıştığınız firma" autocomplete="off">
          </div>

          <input style="transform: scale(1.4);" id="checkbox-register" type="checkbox" name="checkbox" value="onaylandi" /> <a
            href="PIAKVKK.pdf" target="_blank" rel="noopener noreferrer">
            KVKK metnini okudum ve kabul ediyorum
          </a></input>

          <!-- <div class="form-group">
            <label for="tckimlik-register" class="text-muted mb-1"><small><h4> T.C. Kimlik No </h4> </small></label>
            <input name="tckimlik" id="tckimlik-register" class="form-control" type="text" placeholder="T.C. Kimlik numaranız " autocomplete="off">
          </div> -->

          
          
          
          <button type="submit" class="py-3 mt-4 btn btn-lg btn-success btn-block">Kayıt olun</button>
          
        </form>
      </div>
    </div>
  </div>
  
<!-- footer begins -->

<footer class="border-top text-center small text-muted py-3">
  <p class="m-0">Copyright &copy; 2021 <a href="/" class="text-muted">Setream</a>. Tüm hakları saklıdır.</p>
</footer>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<script>$('[data-toggle="tooltip"]').tooltip()</script>
</body>
</html>